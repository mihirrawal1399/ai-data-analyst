# ======================================================
# Global / Shared
# ======================================================

# OpenAI / Model Provider
OPENAI_API_KEY=

# Redis (BullMQ worker)
REDIS_URL=redis://localhost:6379

# ======================================================
# Storage (packages/storage)
# ======================================================
STORAGE_ROOT=./data

# ======================================================
# Backend API (apps/api)
# ======================================================
MCP_DB_URL=http://localhost:${MCP_DB_PORT}/mcp_db_tool
# MCP_DB_PORT=5001 #entioned under mcp db tool section
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_data_analyst

# JWT (if you choose to implement authentication)
JWT_SECRET=your_jwt_secret

# ======================================================
# MCP DB Tool (apps/mcp-db)
# ======================================================
MCP_DB_PORT=5001
DATABASE_SSL=false

# Maximum rows allowed for SQL queries
MCP_DB_QUERY_LIMIT=200

# ======================================================
# MCP Email Tool (apps/mcp-email)
# ======================================================
MCP_EMAIL_PORT=5002

# Choose one email provider:

# For Resend (recommended)
RESEND_API_KEY=

# For SendGrid
SENDGRID_API_KEY=

# For AWS SES
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SES_REGION=

# ======================================================
# Worker (apps/worker)
# ======================================================
WORKER_PORT=5003

# API URL for worker callbacks
API_URL=http://localhost:${API_PORT}

# ======================================================
# Web (Next.js)
# ======================================================
NEXT_PUBLIC_API_URL=http://localhost:${API_PORT}
