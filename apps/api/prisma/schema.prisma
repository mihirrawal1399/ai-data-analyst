generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  createdAt DateTime  @default(now())

  datasets   Dataset[]
  dashboards Dashboard[]
  automations Automation[]
}

model Dataset {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  userId    String
  user      User       @relation(fields: [userId], references: [id])

  tables      DatasetTable[]
  columns     DatasetColumn[]
  queryLogs   QueryLog[]
  charts      Chart[]
}

model DatasetTable {
  id         String    @id @default(uuid())
  name       String
  rowCount   Int       @default(0)

  datasetId  String
  dataset    Dataset   @relation(fields: [datasetId], references: [id])

  columns    DatasetColumn[]
}

model DatasetColumn {
  id          String    @id @default(uuid())
  name        String
  dataType    String
  isNullable  Boolean   @default(false)

  datasetId   String
  tableId     String

  dataset     Dataset      @relation(fields: [datasetId], references: [id])
  table       DatasetTable @relation(fields: [tableId], references: [id])
}

model QueryLog {
  id         String     @id @default(uuid())
  question   String
  sql        String?
  resultPreview Json?
  createdAt  DateTime    @default(now())

  datasetId  String
  dataset    Dataset     @relation(fields: [datasetId], references: [id])
}

model Dashboard {
  id         String    @id @default(uuid())
  name       String
  layout     Json?
  createdAt  DateTime  @default(now())

  userId     String
  user       User      @relation(fields: [userId], references: [id])

  charts     Chart[]
}

model Chart {
  id          String    @id @default(uuid())
  title       String?
  type        String
  config      Json
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  dashboardId String
  dashboard   Dashboard @relation(fields: [dashboardId], references: [id])

  datasetId   String
  dataset     Dataset   @relation(fields: [datasetId], references: [id])
}

model Automation {
  id          String    @id @default(uuid())
  name        String
  schedule    String    // cron expression
  lastRunAt   DateTime?
  payload     Json?

  userId      String
  user        User      @relation(fields: [userId], references: [id])
}
